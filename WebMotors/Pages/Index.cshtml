@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
      <div class="row">
        <div class="col">
          <form id="makeForm">
            <select id="selectMake" onchange="requestModel()">
              <option>Escolha a fabricante</option>
            </select>
          </form>
        </div>
        <div class="col">
          <form id="modelForm">
            <select id="selectModel" onchange="requestVersion()">
              <option>Escolha o modelo</option>
            </select>
          </form>
        </div>
        <div class="col">
          <form id="versionForm">
            <select id="selectVersion" onchange="fillDataObject()">
              <option>Escolha a versao</option>
            </select>
          </form>
        </div>
      </div>
    </div>

    <br /><br />
    <br /><br />

    <div class="container">
      <h1 class="text-center">Criar Anuncio</h1>
      <br /><br />

      <div class="row">
        <div class="col">
        <label class="control-label col-md-3">Fabricante:</label>
          <input readonly id="inputMake" />
        </div>
        <div class="col">
            <label class="control-label col-md-3">Modelo:</label>
          <input readonly id="inputModel" />
        </div>
        <div class="col">
            <label class="control-label col-md-3">Versao:</label>
          <input readonly id="inputVersion" />
        </div>

        <br /><br />
        <div class="form-group">
          <label class="control-label col-md-3">Quilometragem:</label>
          <div class="input-group col-md-7">
            <input type="number" id="inputKM" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-3">Ano:</label>
          <div class="input-group col-md-7">
            <input type="number" id="inputAno" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-3">Observacao:</label>
          <div class="input-group col-md-7">
            <textarea rows="10" id="textObs"></textarea>
          </div>
        </div>
        <br /><br />
        <input type="button" onclick="submit()" value="Submeter anuncio" />
      </div>
    </div>

    <br /><br />
    <div class="container">
    <table id="listAds" class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Marca</th>
          <th scope="col">Modelo</th>
          <th scope="col">Versao</th>
          <th scope="col">Ano</th>
          <th scope="col">Quilometragem</th>
          <th scope="col">Observacao</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
</div>
